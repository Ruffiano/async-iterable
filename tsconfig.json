{
    "compilerOptions": {
      "downlevelIteration": true,
      "rootDir": "./",
      "baseUrl": "./",
      "moduleResolution": "node",
      "lib": ["ES2020", "ES2019", "ES2020.Promise", "ES2020.String", "ES2020.BigInt", "DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "declarationDir": "lib/types"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "lib",
      "scripts",
      "tests"
    ]
}